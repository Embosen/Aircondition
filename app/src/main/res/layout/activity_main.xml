<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"

        app:srcCompat="@drawable/waterview" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">


            <kiyun.controllib.DataCtrl
                android:id="@+id/FunData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:baselineAligned="false"
                app:DecimalWidth="0"
                app:fData="1.000"
                app:txtText="送风量(0-3)"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <kiyun.controllib.DataCtrl
                android:id="@+id/CurTemperature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:DecimalWidth="2"
                app:fData="25.00"
                app:txtText="当前室温(度)"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

            </kiyun.controllib.DataCtrl>

            <kiyun.controllib.DataCtrl
                android:id="@+id/SetTemperature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:DecimalWidth="0"
                app:fData="0"
                app:txtText="设置室温(度)"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

            </kiyun.controllib.DataCtrl>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <kiyun.controllib.ToggleCtrl
                android:id="@+id/BeOpenClose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:txtText="开/关机" />


            <kiyun.controllib.ToggleCtrl
                android:id="@+id/CompRunOrClose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:txtText="压缩机运行/停止" />

            <kiyun.controllib.ToggleCtrl
                android:id="@+id/FunRunOrClose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:txtText="风扇运行/停止" />

            <kiyun.controllib.ToggleCtrl
                android:id="@+id/RefOrBlow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:TrueImageType="1"
                app:txtText="制冷/送风" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@android:color/holo_green_light"
            android:showDividers="middle"
            android:visibility="visible">

            <Button
                android:id="@+id/buttonClear"
                style="@android:style/Widget.CompoundButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:enabled="true"
                android:onClick="OnClickClearCoverityFileData"
                android:text="清空覆盖率"
                android:textAlignment="center"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttonSave"
                style="@android:style/Widget.CompoundButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="OnClickSaveCoverityFileData"
                android:text="请选手存储覆盖率文件"
                android:textAlignment="center" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <kiyun.controllib.DataCtrl
                android:id="@+id/CurCoverityData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:DecimalWidth="4"
                app:fData="0"
                app:txtText="本次覆盖：">

            </kiyun.controllib.DataCtrl>

            <kiyun.controllib.DataCtrl
                android:id="@+id/AllCoverityData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:DecimalWidth="4"
                app:fData="0"
                app:txtText="总覆盖：">

            </kiyun.controllib.DataCtrl>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
